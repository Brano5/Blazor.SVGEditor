<Item>
    <div class="icon">🎢</div> Path Data
    <SubMenu>
        @for (int i = 0; i < Animate.FrameCount; i++)
        {
            var j = i;
            @if (Animate.CurrentFrame == j)
            {
                <Item CssClass="dark" OnClick="() => Animate.SetParentD(null)"><div class="icon">✅</div> Frame @j Data</Item>
            }
            else
            {
                <Item OnClick="() => Animate.SetParentD(j)">
                    <div class="icon">👁‍🗨</div>
                    Frame @j Data
                    <div class="icon" @onclick:stopPropagation=true @onclick="() => Animate.RemoveFrame(j)" title="Remove Frame" alt="Remove Frame">❌</div>
                </Item>
            }
        }
        <Item @onclick:stopPropagation="true" @onpointerup="() => Animate.AddFrame()"><div class="icon">➕</div> Add Frame</Item>
        <Item OnClick="() => Animate.Remove()"><div class="icon">❌</div> Remove Animation</Item>
    </SubMenu>
</Item>

@code {
    [Parameter]
    public AnimateD Animate { get; set; } = default!;
}