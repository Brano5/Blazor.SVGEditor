<use @onmousedown=OnMouseDown href="#primaryAnchor" x=@SVG.LocalTransform(Position).x.AsString() y=@SVG.LocalTransform(Position).y.AsString() transform="translate(-7 -7)" />

@code {
    [Parameter]
    public EventCallback<MouseEventArgs> OnMouseDown { get; set; }

    [Parameter]
    public (double x, double y) Position { get; set; }

    [CascadingParameter]
    protected SVG SVG { get; set; }
}
